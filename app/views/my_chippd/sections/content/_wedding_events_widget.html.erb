<% if section.available? %>
<h1 class="sectionHeading"><span>Events</span></h1>
<ol>
<% section.events.each do |event| %>
  <li>
    <%= event.image %>
    <h1><%= event.what %></h1>
    <h2><%= event.datetime %></h2>
    <p><%= event.where %></p>
    <p class="url"><%= event.url %></p>
    <p class="note"><%= event.note %></p>
  </li>
<% end %>
</ol>
<% else %>
  <%= section.processing_message %>
  <%= render 'my_chippd/sections/content/generic_pusher_javascript',
             id: section.to_param,
             section: section,
             error_message: 'There was an error while processing the images.' %>
<% end %>
